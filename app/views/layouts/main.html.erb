<section class="header_name">
    <h3 class="text-center"><a href="/">C.S.T.M. Image search engine::<span>&nbsp;Open Data</a></span></h3>
</section>

  <div class="container">
       <%= render 'layouts/messages' %>
  </div>
       <%= yield %>


